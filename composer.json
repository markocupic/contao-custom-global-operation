{
    "name": "markocupic/contao-custom-global-operation",
    "description": "Extends the Contao Backend Global Operation Navigation",
    "keywords": [
        "contao",
        "bundle",
        "custom global operations menu"
    ],
    "type": "contao-bundle",
    "license": "MIT",
    "authors": [
        {
            "name": "Marko Cupic",
            "email": "m.cupic@gmx.ch",
            "homepage": "https://github.com/markocupic",
            "role": "Developer"
        }
    ],
    "support": {
        "issues": "https://github.com/markocupic/contao-custom-global-operation/issues",
        "source": "https://github.com/markocupic/contao-custom-global-operation"
    },
    "require": {
        "php": "^8.3",
        "contao/core-bundle": "^4.13 || ^5.0"
    },
    "require-dev": {
        "contao/manager-plugin": "^2.3.1",
        "contao/test-case": "^4.5",
        "phpunit/phpunit": "^9.3",
        "symfony/phpunit-bridge": "^5.4",
        "contao/easy-coding-standard": "^6.0"
    },
    "autoload": {
        "psr-4": {
            "Markocupic\\ContaoCustomGlobalOperation\\": "src/"
        }
    },
    "config": {
        "allow-plugins": {
            "contao-components/installer": true,
            "contao/manager-plugin": true,
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "contao-community-alliance/composer-plugin": true,
            "php-http/discovery": true
        }
    },
    "extra": {
        "contao-manager-plugin": "Markocupic\\ContaoCustomGlobalOperation\\ContaoManager\\Plugin"
    }
}
